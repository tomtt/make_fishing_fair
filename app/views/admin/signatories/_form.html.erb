<%= semantic_form_for [:admin, @signatory], builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.inputs do %>
    <%= f.input :position %>
    <%= f.input :name %>
    <li>
      <label class="label">Current logo</label>
      <% if f.object.logo.attached? %>
        <%= image_tag(f.object.logo.variant(:signatory_list)) %>
      <% else %>
        No logo
      <% end %>
    </li>
    <%= f.input :logo, as: :file, label: "Upload logo" %>
    <%= f.actions %>
  <% end %>
<% end %>
