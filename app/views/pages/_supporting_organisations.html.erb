<h2>Supporting organisations</h2>
<div class="card-deck">
  <% @supporting_organisations.each do |supporting_organisation| %>
    <div class="card mr-2 mb-2 shadow" style="width: 18rem; display: inline-block;">
      <%= image_tag supporting_organisation.logo.variant(:displayed_logo), class: "p-4 card-img-top", alt: "logo #{supporting_organisation.name}" %>
      <div class="card-body">
        <p class="card-text"><%= supporting_organisation.name %></p>
      </div>
    </div>
  <% end %>
</div>
