<div class="letter-translations">
  <div class="accordion" id="letter-translations-accordion">
    <div class="accordion-item">
      <h2 class="accordion-header" id="lta-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#lta-collapse" aria-expanded="false" aria-controls="lta-collapse">
          Download Translations
        </button>
      </h2>
      <div id="lta-collapse" class="accordion-collapse collapse" aria-labelledby="lta-header" data-bs-parent="#letter-translations-accordion">
        <div class="accordion-body">
          <div>Clicking on a button below will download the pdf of the letter translated in that language.</div>
          <% @letter_translations.each do |letter_translation| %>
            <%=button_to(letter_translation.language_name, rails_blob_path(letter_translation.pdf, disposition: "attachment"), method: :get, class: "download-button") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
